@model List<UserFile>

@{
    ViewData["Title"] = "Files";
}

<h1>Files</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Created Date</th>
            <th>File Status</th>
            <th>Download</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FileName</td>
            <td>@item.GetCreatedDate</td>
            <td>@item.FileStatus</td>
            <td>
                <a href="~/files/@item.FilePath " class="btn btn-primary
                    @(item.FileStatus == FileStatus.Creating ? "Disable" : "Enable")">
                Download
            </a></td>
        </tr>
    }


</table>

